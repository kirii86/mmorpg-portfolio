---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import { useTranslation } from "@/i18n/utils";
import { getIcon } from "@/lib/icons";

const { t } = useTranslation("en");
---

<Layout
  title="Contact KiriDev - Freelance Frontend Developer"
  description="Contact KiriDev for frontend development projects. Available for freelance work, consulting and collaborations in React, Vue, Astro and more."
  lang="en"
  type="website"
>
  <Navbar lang="en" currentPath="/en/contact" />

  <main class="min-h-screen pt-24 pb-16">
    <div class="container mx-auto px-6">
      <!-- Page Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-cinzel font-bold mb-6">
          <span
            class="bg-gradient-to-r from-yellow-400 to-amber-500 bg-clip-text text-transparent"
          >
            {t.contact.title}
          </span>
        </h1>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto font-cinzel">
          {t.contact.subtitle}
        </p>
        <div
          class="w-24 h-1 bg-gradient-to-r from-yellow-400 to-amber-500 mx-auto mt-6"
        >
        </div>
      </div>

      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="mmorpg-card">
            <h2
              class="text-2xl font-cinzel font-bold text-yellow-400 mb-8 flex items-center"
            >
              <span class="text-2xl mr-3">üì¨</span>
              {t.contact.form.title}
            </h2>

            <form id="contact-form" class="space-y-6">
              <div>
                <label
                  for="name"
                  class="block text-sm font-orbitron text-yellow-400 mb-2"
                >
                  {t.contact.form.name}
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-gray-900/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 text-white placeholder-gray-400 transition-all duration-300 font-orbitron"
                  placeholder={t.contact.form.namePlaceholder}
                />
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-orbitron text-yellow-400 mb-2"
                >
                  {t.contact.form.email}
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-gray-900/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 text-white placeholder-gray-400 transition-all duration-300 font-orbitron"
                  placeholder={t.contact.form.emailPlaceholder}
                />
              </div>

              <div>
                <label
                  for="subject"
                  class="block text-sm font-orbitron text-yellow-400 mb-2"
                >
                  {t.contact.form.subject}
                </label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-3 bg-gray-900/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 text-white placeholder-gray-400 transition-all duration-300 font-orbitron"
                  placeholder={t.contact.form.subjectPlaceholder}
                />
              </div>

              <div>
                <label
                  for="message"
                  class="block text-sm font-orbitron text-yellow-400 mb-2"
                >
                  {t.contact.form.message}
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-3 bg-gray-900/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 text-white placeholder-gray-400 transition-all duration-300 font-orbitron resize-none"
                  placeholder={t.contact.form.messagePlaceholder}></textarea>
              </div>

              <button
                type="submit"
                class="w-full mmorpg-button py-4 font-orbitron font-bold text-lg group"
                data-send-text={t.contact.form.send}
                data-sending-text="Sending..."
              >
                <span class="flex items-center justify-center">
                  <svg
                    class="w-5 h-5 mr-2 group-hover:rotate-12 transition-transform duration-300"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                  {t.contact.form.send}
                </span>
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <!-- Contact Info Card -->
            <div class="mmorpg-card">
              <h2
                class="text-2xl font-cinzel font-bold text-yellow-400 mb-6 flex items-center"
              >
                <span class="text-2xl mr-3">‚ÑπÔ∏è</span>
                {t.contact.info.title}
              </h2>

              <div class="space-y-4">
                <div class="flex items-center space-x-3">
                  <div
                    class="w-8 h-8 bg-gradient-to-br from-yellow-400 to-amber-500 rounded-lg flex items-center justify-center"
                  >
                    <div
                      class="w-4 h-4 text-slate-800"
                      set:html={getIcon("mail")}
                    />
                  </div>
                  <div>
                    <p class="font-orbitron text-gray-300">
                      kiridev.contact@gmail.com
                    </p>
                  </div>
                </div>

                <div class="flex items-center space-x-3">
                  <div
                    class="w-8 h-8 bg-gradient-to-br from-yellow-400 to-amber-500 rounded-lg flex items-center justify-center"
                  >
                    <div
                      class="w-4 h-4 text-slate-800"
                      set:html={getIcon("character")}
                    />
                  </div>
                  <div>
                    <p class="font-orbitron text-yellow-400">
                      {t.contact.info.availability}
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Social Media -->
            <div class="mmorpg-card">
              <h2
                class="text-2xl font-cinzel font-bold text-yellow-400 mb-6 flex items-center"
              >
                <span class="text-2xl mr-3">üåê</span>
                {t.contact.social.title}
              </h2>

              <div class="grid grid-cols-2 gap-4">
                <a
                  href="https://github.com/kirii86"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-3 p-4 bg-gray-900/30 rounded-lg border border-gray-700 hover:border-yellow-400 transition-all duration-300 group"
                >
                  <svg
                    class="w-6 h-6 text-gray-400 group-hover:text-yellow-400 transition-colors"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                    ></path>
                  </svg>
                  <span
                    class="font-orbitron text-gray-300 group-hover:text-yellow-400 transition-colors"
                    >GitHub</span
                  >
                </a>

                <a
                  href="https://linkedin.com/in/kiridev"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-3 p-4 bg-gray-900/30 rounded-lg border border-gray-700 hover:border-yellow-400 transition-all duration-300 group"
                >
                  <svg
                    class="w-6 h-6 text-gray-400 group-hover:text-yellow-400 transition-colors"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                    ></path>
                  </svg>
                  <span
                    class="font-orbitron text-gray-300 group-hover:text-yellow-400 transition-colors"
                    >LinkedIn</span
                  >
                </a>
              </div>
            </div>

            <!-- Response Time -->
            <div class="mmorpg-card">
              <h2
                class="text-2xl font-cinzel font-bold text-yellow-400 mb-6 flex items-center"
              >
                <span class="text-2xl mr-3">‚è∞</span>
                {t.contact.response.title}
              </h2>
              <p class="text-gray-300 font-cinzel leading-relaxed">
                {t.contact.response.description}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    // Form submission
    const form = document.getElementById("contact-form") as HTMLFormElement;
    const submitBtn = form?.querySelector(
      'button[type="submit"]'
    ) as HTMLButtonElement;

    if (form && submitBtn) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Get button text data attributes
        const sendText = submitBtn.dataset.sendText || "Send Message";
        const sendingText = submitBtn.dataset.sendingText || "Sending...";

        // Disable button and show loading
        submitBtn.disabled = true;
        const buttonSpan = submitBtn.querySelector("span");
        if (buttonSpan) {
          buttonSpan.innerHTML = `
            <svg class="w-5 h-5 mr-2 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            ${sendingText}
          `;
        }

        try {
          // Simulate form submission
          await new Promise((resolve) => setTimeout(resolve, 2000));

          // Show success message
          alert("Message sent successfully!");

          // Reset form
          form.reset();
        } catch (error) {
          // Show error message
          alert("Error sending message. Please try again.");
        } finally {
          // Reset button
          submitBtn.disabled = false;
          if (buttonSpan) {
            buttonSpan.innerHTML = `
              <svg class="w-5 h-5 mr-2 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              ${sendText}
            `;
          }
        }
      });
    }

    // Form field animations
    const formFields = document.querySelectorAll("input, textarea");
    formFields.forEach((field) => {
      field.addEventListener("focus", () => {
        gsap.to(field, {
          duration: 0.3,
          scale: 1.02,
          ease: "power2.out",
        });
      });

      field.addEventListener("blur", () => {
        gsap.to(field, {
          duration: 0.3,
          scale: 1,
          ease: "power2.out",
        });
      });
    });

    // Card animations
    gsap.from(".mmorpg-card", {
      duration: 0.8,
      y: 50,
      opacity: 0,
      stagger: 0.2,
      ease: "power3.out",
    });
  });
</script>
